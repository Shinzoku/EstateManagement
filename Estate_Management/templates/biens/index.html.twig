{% extends 'base.html.twig' %}

{% block title %}Biens index{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center m-5 text-white">LISTE DES BIENS IMMOBILIER</h2>
        <div>
            <table class="tableRaduis table table-hover table-dark text-center">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NOM</th>
                        <th scope="col">ADRESSE</th>
                        <th scope="col">STATUT</th>
                        <th scope="col">ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    {% for bien in biens %}
            <tr>
                <td>{{ bien.id }}</td>
                <td>{{ bien.noms }}</td>
                <td>{{ bien.adresses.numeros }} {{ bien.adresses.voies }} {{ bien.adresses.cp }} {{ bien.adresses.villes }}</td>
                <td>{{ bien.statuts ? 'Habit√©e' : 'Libre' }}</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="...">
                    <a href="{{ path('biens_show', {'id': bien.id}) }}" class="btn btn-outline-primary btn-sm">VOIR</a>
                    {{ include('biens/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-right mt-4 mb-5">
            <a href="{{ path('biens_new') }}" class="btn btn-outline-light">AJOUTER</a>
        </div>
    </div>
{% endblock %}
