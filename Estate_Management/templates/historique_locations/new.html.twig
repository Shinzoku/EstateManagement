{% extends 'base.html.twig' %}

{% block title %}Nouvelle location{% endblock %}

{% block body %}
<div class="container">
        <h2 class="text-center m-5 text-white">NOUVELLE LOCATION</h2>
        {{form_start(form)}}
        <div class="formBorder border border-dark p-3 mx-auto w-50">
            <div class="form-group">
                <label class="text-white" for="nom">Selectionner une location pour {{locataires.prenoms}} {{locataires.noms}}:</label>
                {{form_widget(form.biens)}}
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-outline-light mt-4">AJOUTER</button>
            </div>
        </div>
        {{form_end(form)}}
        <div class="text-center mt-5 mb-5">
            <a href="{{path('locataires_show', {'id': locataires.id})}}" class="btn btn-dark">‚Üê Retour au locataire</a>
        </div>
    </div>
{% endblock %}