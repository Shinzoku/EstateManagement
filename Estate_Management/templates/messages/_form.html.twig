<small class="text-warning">Tous les champs sont requis.</small>
                            <p class="text-white text-center">Nom du bien: {{ biens.noms }}</p>
                            {{form_start(form, {'action': path('messages_new', { 'id': biens.id })})}}
                            <div class="modal-content detailsBorder p-3">
                                <label class="text-white" for="email">Email:</label>
                                {{form_widget(form.emails)}}
                                <label class="text-white mt-3" for="objet">Objet:</label>
                                {{form_widget(form.objets)}}
                                <label class="text-white mt-3" for="message">Message:</label>
                                {{form_widget(form.demandes)}}
                            </div>
                            <div class="text-right m-3">
                            <div class="g-recaptcha" data-sitekey="your_site_key"></div>
                                <button class="btn btn-outline-light" type="submit">Envoyer le message</button>
                                <button type="button" class="btn btn-outline-light" data-dismiss="modal">Fermer</button>
                            </div>
                            {{form_end(form)}}
                            <script src="https://www.google.com/recaptcha/api.js" async defer></script>
