{% extends 'base.html.twig' %}

{% block title %}Liste des Messages{% endblock %}

{% block body %}
<div class="container">
    <h2 class="text-center m-5 text-white">LISTE DES MESSAGES</h2>
    <div>
        <table class="tableRaduis table table-hover table-dark text-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Objet</th>
                    <th>Date d'envoie</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for message in messages %}
                <tr>
                    <td>{{ message.id }}</td>
                    <td>{{ message.objets }}</td>
                    <td>{{ message.dateAdd ? message.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group" aria-label="...">
                            <a class="btn btn-outline-primary btn-sm w-100" href="{{ path('messages_show', {'id': message.id}) }}">VOIR</a>
                            {{ include('messages/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}