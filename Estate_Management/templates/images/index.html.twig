{% extends 'base.html.twig' %}

{% block title %}Liste Images Carousel{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center m-5 text-white">LISTE DES IMAGES DU CAROUSEL</h2>
        <div>
            <table class="tableRaduis table table-hover table-dark text-center">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Noms</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for image in images %}
                    <tr>
                        <td>{{ image.id }}</td>
                        <td>{{ image.noms }}</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group" aria-label="...">
                            <a class="btn btn-outline-primary btn-sm w-100" href="{{ path('images_edit', {'id': image.id}) }}">VOIR</a>
                            {{ include('images/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-right mt-4 mb-5">
            <a class="btn btn-outline-light" href="{{ path('images_new') }}">AJOUTER</a>
        </div>
    </div>
{% endblock %}
