{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}
    <h1>Images</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Noms</th>
                <td>{{ image.noms }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ image.alt }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ image.width }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ image.height }}</td>
            </tr>
            <tr>
                <th>Activate</th>
                <td>{{ image.activate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date_add</th>
                <td>{{ image.dateAdd ? image.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_update</th>
                <td>{{ image.dateUpdate ? image.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_delete</th>
                <td>{{ image.dateDelete ? image.dateDelete|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('images_index') }}">back to list</a>

    <a href="{{ path('images_edit', {'id': image.id}) }}">edit</a>

    {{ include('images/_delete_form.html.twig') }}
{% endblock %}
