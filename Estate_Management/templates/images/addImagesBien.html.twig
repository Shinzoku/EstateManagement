        <form name="addImage" method="POST" class="formBorder border border-dark pb-3 w-50 mx-auto">
            <div class="">
                <div class="mt-2 mb-2"><span class="text-white">Nom: {{ biens.noms }}</span></div>
                <div class="mt-2 mb-2"></div>
                
                
            </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-outline-light w-50">AJOUTER</button>
        </div>
        </div>
        <div class="text-center mt-5 mb-5">
            <a href="{{ path('biens_show', {'id': biens.id}) }}" class="btn btn-dark w-50">← Retour à la liste</a>
        </div>
    </div>
{% endblock %}
